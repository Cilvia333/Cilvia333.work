{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~~/*": ["./*"]
    },
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["src/types/"]
  }
}
